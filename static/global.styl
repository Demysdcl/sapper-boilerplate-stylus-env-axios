$black = #333333
$code-color = #555555
$back-color = #f0f0f0

body
	color: $black
	font-family: Roboto, -apple-system, BlinkMacSystemFont, Segoe UI, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif
	font-size: 14px
	line-height: 1.5
	margin: 0

	h1, h2, h3, h4, h5, h6
		font-weight: 400
		line-height: 1.2em
		margin: 0 0 0.5em 0
		
	h1
		font-size: 2em

		a
			color: inherit

	code
		background-color: $back-color
		border-radius: 2px
		color: $code-color
		font-family: menlo, inconsolata, monospace
		font-size: calc(1em - 2px)
		padding: .2em .4em
		
@media (min-width: 400px)
	body
		font-size: 16px
	
